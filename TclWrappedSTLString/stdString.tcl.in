#!${TCL_TCLSH}

load ${CABLE_TCL_LIBRARY}
load ${ITK_BINARY_DIR}/Examples/TclWrappedSTLString/libStringTcl.so

# Create an object of std::string class.
set name [stdstring]

$name = "Cable Hello World"

puts \n
puts "This is the content of a wrapped std::string"
puts \n
puts [ $name c_str ]


puts "We can concatenate two strings"
set firstString  [stdstring]
set secondString [stdstring]

$firstString  = "C++ is the worst programming language...  "
$secondString = "except for all the others"

puts [ concat "first  string: " [ $firstString  c_str ] ]
puts [ concat "second string: " [ $secondString c_str ] ]

$firstString += $secondString

puts "resulting string: "
puts [ $firstString c_str ]


puts "We can get the size of the string:"
puts [ $firstString size ]


set conclusion [stdstring]
$conclusion = "CABLE is great !"

puts "Conclusion: "
puts [ $conclusion c_str ]

